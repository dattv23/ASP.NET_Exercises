@model IEnumerable<Nhom09_Chieu4_BaiTapTuan3.Models.TheLoai>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section ThanhSearch {
    @using (Html.BeginForm("Index", "TheLoai", FormMethod.Get))
    {
        <div class="input-group mb-3">
            <input type="text" class="form-control" name="searchTerm" placeholder="Search the loai">
            <button class="btn btn-outline-secondary" type="submit" style="background-color: #ccc; border-color: #fff">Search</button>
        </div>
    }
}
@section CustomStyles {
    <li style="position: relative;">@Html.ActionLink("The Loai", "Index", "TheLoai", new { area = "" }, new { @class = "nav-link nav_theloai", style = "font-size: 18px; font-weight: 600" })</li>
    <li style="position: relative;">@Html.ActionLink("Sach", "Index", "Sach", new { area = "" }, new { @class = "nav-link", style = "font-size: 18px; font-weight: 600" })</li>
}


@if (Model.Count() != 0)
{
    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary ms-1" })
    </p>
    <table class="table">
        <tr>
            <th>
                <p>Thể Loại</p>
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.tenloai)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.maloai }) |
                    @Html.ActionLink("Details", "Details", new { id = item.maloai }) |
                    @*@Html.ActionLink("Delete", "Delete", new { id = item.maloai })*@
                </td>
            </tr>
        }
    </table>
}
else
{
    <p style="font-size: 30px; font-weight: 600">404 Not Found</p>
}

@if (@ViewBag.searchTerm != null)
{

    @Html.ActionLink("Back", "Index", "TheLoai", new { @class = "btn btn-info ms-3" })
}
